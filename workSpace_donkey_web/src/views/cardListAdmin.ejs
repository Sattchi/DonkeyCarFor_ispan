<% layout('layout') %>
<%
const isAdmin = (auth == 'admin') || (auth == 'root')
%>

<body>
  <!-- <nav class="navbar navbar-expand-md navbar-dark" style="background-color: rgba(255, 99, 71, 0.469)">
    <div class="navbar-nav">
      <a href="<%-baseUrl%>/list" class="nav-link">Cars</a>
