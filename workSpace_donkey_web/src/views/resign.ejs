<% layout('layout') %>


<div class="card">


  <div class="fakeimg">
    <p class="fw-bold run_run_text" style="font-size:5vw;">Run Run <span class="badge bg-secondary">DonkeyCar</span></p>
  </div>
  <br>
  <h2>
    <%= title %>
  </h2>
  <br>
  <form method="post" action="/regist">
    <label for="userName">暱稱:</label>
    <input type="text" id="userName" name="userName"><br><br>
    <label for="emailAddr">信箱:</label>
    <input type="text" id="emailAddr" name="emailAddr"><br><br>
    <label for="passwd">密碼:</label>
    <input type="password" id="passwd" name="passwd" onclick="showPwd(this)"><br><br>
    <input class="btn btn-primary" type="submit" value="確認">
  </form>

</div>
<script>
  function showPwd(ele) {
    ($(ele).attr('type') === 'text') ? $(ele).attr('type', 'password'): $(ele).attr('type', 'text')
  }
</script>
<script>
    var error = '' + '<%- error %>';
    var warning = '' + '<%- warning %>';
    var message = '' + '<%- message %>';
    var success = '' + '<%- success %>';
</script>