<% layout('layout') %>
<style>
  body::-webkit-scrollbar {
    display: none;
  }
</style>
</head>

<body>

  <form action="/give_money" method="post">
    <center>
      <br>
      <div class="mycard0">
        <div id="timeBox"></div>
        <h2>停車場繳費</h2>

        <br>
        <img src="<%= car_img_path %>" />

        <h1>車牌號碼:<br>
          <div class="tbox"><%= license_plate %></div>
        </h1>



        <h1>停放位置:<%= space_id %></h1>

        <% if(confirm) { %>
        <h1 style="color:red;">已繳費完成</h1>
        <% } else { %>
        <h1>繳費金額:<%= money %></h1>
        <%} %>



        <h1>入場時間:<br><%= enter_time %></h1>

        <h1>停放時間:<br>30分鐘</h1>


        <% if(confirm) { %>
        <% } else { %>
        <label for="fname">投入金額:</label>
        <input type="text" id="enter_money" name="enter_money"><br><br>
        <input type="hidden" id="money" name="money" value="<%= money %>">
        <input type="hidden" id="license_plate" name="license_plate" value="<%= license_plate %>">
        <input style="width:140px;height:50px;" type="submit" value="確定">
        <%} %>

      </div>
    </center>
  </form>



  <br>
  <br>



  </div>

</body>
<Script>
  // 設定秒數
  var count = 60;

  function countDown() {
    // 將秒數寫在指定元素中
    document.getElementById("timeBox").innerHTML = count;
    // 每次執行就減1
    count -= 1;
    // 當 count = 0 時跳轉頁面
    if (count == 0) {
      location.href = "/";
    }
    // 設定每秒執行1次
    setTimeout("countDown()", 1000);
  }
  // 執行 countDown
  countDown();
</Script>

</html>